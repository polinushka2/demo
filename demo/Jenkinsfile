pipeline {
    agent {
    node {
        label 'master'
    }
}
  stages {
    stage('Checkout external proj') {
        steps {
            git branch: 'main',
                credentialsId: 'none',
                url: 'https://github.com/polinushka2/demo.git'

            sh "ls -lat "
        }
    }
	stage('Build') { 
            steps {
		sh 'chmod +x demo/mvnw; cd demo; ./mvnw package' 
		sh 'cp demo/target/demo-0.0.1-SNAPSHOT.jar /home/polina/'
            }
        }	
	stage('Test') {
            steps {
                sh 'cd demo; ./mvnw test'
            }
        post {
                always {
                    junit 'demo/target/surefire-reports/TEST*.xml' 
                }
            }
	}
	stage('Build image') {
            steps {
                sh 'sudo docker build -t docker1 demo/'
                sh 'docker images'

            }
}
}
}
